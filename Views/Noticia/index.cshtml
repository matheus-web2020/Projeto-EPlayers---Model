<input type="file" name="Imagem" id="Imagem">

 <button type="submit">Mostrar Imagem</button>
</form>
<table class="table table-striped table-responsive ">
    <thead>
        <th>Texto</th>
        <th>Imagem</th>
        <th>Imagem</th>
    </thead>
    <tbody>
@foreach (var item in ViewBag.Noticia)
