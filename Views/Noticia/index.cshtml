@model Noticias
@{
    ViewData["Title"] = "Noticias";
}
<div class="titulo_pagina">
   <h1>Ver @ViewData["Title"]</h1>
</div>

<form class="cadastro" action="@Url.Action("Cadastro")" method="post" enctype="multipart/form-data">



<div class="campo">
   <label for="IdNoticias">IdNoticias</label>
   <input type="text" name="IdNoticias" id="IdNoticias">]
</div>

<div class= "campo">
<label for="Titulo">Título</label>
<input type="text" name="Titulo" id="Titulo">
</div>

<div class= "campo">
<label for="Texto">Texto</label>
<input type="text" name="Texto" id="Texto">
</div>

<div class="campo">
   <label for="Imagem">Imagem</label>
   <input type="file" name="Imagem" id="Imagem">
</div>



<button class="gradient btn" type="submit">Ver Noticias</button>

</form>

<table class = "table table-responsive table-striped">

    <thead>

        <th>IdNoticias<th>
        <th>Título<th>
        <th>Texto</th>
        <th>Imagem<th>
        <th>Ações</th>
    </thead>

    <tbody>
        @foreach (var item in ViewBag.Noticias)
        {
            <tr> 
                 <td>@item.IdNoticias</td> 
                <td>@item.Titulo</td> 
                <td>@item.Texto</td> 
                 <td><img src="img/Noticias/@item.Imagem" alt="Imagem da equipe @item.Titulo" ></td> 
                <td><a asp-area="" asp-controller="Noticia" asp-action="Excluir" asp-route-id="@item.IdNoticias"><i class="fa fa-trash"></i></a></td>


            </tr>
        }
    </tbody>

</table>